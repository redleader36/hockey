<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:time) %></th>
      <th><%= model_class.human_attribute_name(:home_team_id) %></th>
      <th><%= model_class.human_attribute_name(:home_goalie_id) %></th>
      <th><%= model_class.human_attribute_name(:away_team_id) %></th>
      <th><%= model_class.human_attribute_name(:away_goalie_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.id, game_path(game) %></td>
        <td><%= game.date %></td>
        <td><%= game.time %></td>
        <td><%= game.home_team.name %></td>
        <td><%= game.home_goalie.name %></td>
        <td><%= game.away_team.name %></td>
        <td><%= game.away_goalie.name %></td>
        <td>
          <%= link_to "Show", game, :class => 'btn btn-mini'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
