<%= semantic_form_for @game, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.inputs do %>  
    <%= f.input :date, :as => :select, :collection => day_list("wednesday") %>
    <%= f.input :time, :as => :select, :collection => time_list %>
    <%= f.input :referees, :as => :check_boxes %>
    <%= f.input :home_team %>
    <%= f.input :home_goalie, :as => :select, :collection => Player.find_all_by_position_id(1) %>
    <%= f.input :away_team %>    
    <%= f.input :away_goalie, :as => :select, :collection => Player.find_all_by_position_id(1) %>
    <%= f.input :notes %>
  <% end %>
  <%= f.actions %>
<% end %>
