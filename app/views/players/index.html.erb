<%- model_class = Player -%>
<% title t('.title', :default => model_class.model_name.human.pluralize) %>
<%= paginate @players %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Player Name</th>
      <th><%= model_class.human_attribute_name(:team_id) %></th>
      <th><%= model_class.human_attribute_name(:position_id) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.initial_name, player_path(player) %></td>
        <td><%= link_to player.team.name, team_path(player.team) %></td>
        <td><%= player.try(:position).try(:name) %></td>        
        <td><%= player.number %></td>
        <td>          
          <%= link_to "Show", player, :class => 'btn btn-mini'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
